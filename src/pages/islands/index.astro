---
import MainLayout from "@layouts/MainLayout.astro";
import Title from "@components/shared/Title.astro";
import { Counter } from "@components/shared/Counter.tsx";

const counterValue = 20;
---

<MainLayout title="Islas">
  <Title>Islas</Title>
  <video controls="" autoplay="" transition:persist="video">
    <source
      src="https://ia804502.us.archive.org/33/items/GoldenGa1939_3/GoldenGa1939_3_512kb.mp4"
      type="video/mp4"
    />
  </video>

  <Counter
    transition:persist="counter"
    transition:persist-props
    client:visible
    initValue={counterValue}
  >
    <h1 class="text-3xl">Counter Island</h1>
  </Counter>
</MainLayout>
